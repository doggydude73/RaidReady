<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/createMemberDetailsFragment" >

    <TextView
        android:id="@+id/CreateMemberDetailsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/createMemberDetailFragmentHeader"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/RealmListOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/realm_list"
        android:prompt="@string/realm_list_prompt" />
    
</RelativeLayout>