<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ajsuneson.raidready"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".OpeningMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NameRaidTeam"
            android:label="@string/title_activity_create_raid"
            android:parentActivityName=".OpeningMenu" >
        </activity>
        <activity
            android:name=".CreateRaidTeam"
            android:label="@string/title_activity_create_raid_team"
            android:parentActivityName=".OpeningMenu" >
        </activity>
        <activity
            android:name=".OpenRaidTeamList"
            android:label="@string/title_activity_open_raid_team" >
        </activity>
        <activity
            android:name=".CreateMemberDetailActivity"
            android:label="@string/title_activity_create_member_detail" >
        </activity>
    </application>

</manifest>
